<apex:page standardController="AIA_Document__c" extensions="AIA_BAARejectionEmailExtCtrlr" >
  <apex:form >
      <apex:pageBlock title="BAA Customized Document Rejection Reason">
          <apex:pageMessages ></apex:pageMessages>
          <apex:outputPanel rendered="{!!isDisable}">
              <apex:pageblockSection columns="1">
                  <apex:inputText value="{!emailToAddress}" label="To:"/>
                  <apex:inputText value="{!emailSubject}" label="Subject:"/>
                  <apex:inputTextarea cols="120" rows="10" value="{!mailBody}" label="Body:"/>
              </apex:pageblockSection>
          </apex:outputPanel>
          <apex:pageBlockButtons location="bottom">
              <apex:commandButton value="Send" action="{!sendEmail}" disabled="{!isDisable}"/>
              <apex:commandButton value="Back" action="{!Back}"/>
          </apex:pageBlockButtons>
      </apex:pageBlock>
  </apex:form>
</apex:page>